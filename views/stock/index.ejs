<div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-semibold">Stock Management</h1>
    <a href="/stock/create" class="btn btn-primary">
        Add New Stock Transaction
    </a>
</div>

<div class="card">
    <div class="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Vendor</th>
                    <th>Item</th>
                    <th>Type</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Total</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% stock.forEach(item => { %>
                    <tr>
                        <td><%= item.date.toLocaleDateString() %></td>
                        <td><%= item.vendorName %></td>
                        <td><%= item.itemName %></td>
                        <td>
                            <span class="px-2 py-1 text-xs rounded-full <%= item.transactionType === 'purchase' ? 'bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200' : 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200' %>">
                                <%= item.transactionType %>
                            </span>
                        </td>
                        <td><%= item.quantity %></td>
                        <td>₹<%= item.price.toFixed(2) %></td>
                        <td>₹<%= (item.quantity * item.price).toFixed(2) %></td>
                        <td>
                            <div class="flex space-x-2">
                                <a href="/stock/<%= item._id %>/edit" class="text-primary-600 hover:text-primary-800 dark:text-primary-400 dark:hover:text-primary-300">
                                    Edit
                                </a>
                                <form action="/stock/<%= item._id %>?_method=DELETE" method="POST" class="inline">
                                    <button type="submit" class="text-red-600 hover:text-red-800 dark:text-red-400 dark:hover:text-red-300" onclick="return confirm('Are you sure you want to delete this transaction?')">
                                        Delete
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div> 