<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-semibold">Invoices</h1>
        <a href="/invoices/create" class="btn btn-primary">
            Create New Invoice
        </a>
    </div>

    <div class="card">
        <div class="table-container">
            <table class="table">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Invoice No</th>
                        <th>Vendor Name</th>
                        <th>Total Amount</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (invoices && invoices.length > 0) { %>
                        <% invoices.forEach(invoice => { %>
                            <tr>
                                <td><%= invoice.date.toLocaleDateString() %></td>
                                <td>#<%= invoice._id.toString().slice(-6).toUpperCase() %></td>
                                <td><%= invoice.vendorName %></td>
                                <td>â‚¹<%= invoice.totalAmount.toFixed(2) %></td>
                                <td>
                                    <span class="px-2 py-1 text-xs rounded-full bg-green-100 text-green-800">
                                        Paid
                                    </span>
                                </td>
                                <td>
                                    <div class="flex space-x-2">
                                        <a href="/invoices/<%= invoice._id %>" class="text-blue-600 hover:text-blue-800">
                                            View
                                        </a>
                                        <a href="/invoices/<%= invoice._id %>/download" class="text-green-600 hover:text-green-800">
                                            Download
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="6" class="text-center py-4">
                                No invoices found
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div> 