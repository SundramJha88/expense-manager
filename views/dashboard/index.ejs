<div class="space-y-6">
    <!-- Summary Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <i class="fas fa-arrow-up text-green-500 text-3xl"></i>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">Total Income</dt>
                            <dd class="text-2xl font-semibold text-gray-900">Rs. <%= totalIncome.toFixed(2) %></dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
        <!-- Similar cards for Expense and Net Profit -->
    </div>

    <!-- Recent Transactions -->
    <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
            <div class="flex items-center justify-between mb-4">
                <h2 class="text-lg font-semibold text-gray-900">Recent Transactions</h2>
                <a href="/transactions" class="text-primary-600 hover:text-primary-800 text-sm font-medium">
                    View All <i class="fas fa-arrow-right ml-1"></i>
                </a>
            </div>
            <!-- Enhanced table styling -->
        </div>
    </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Stock Summary -->
    <div class="card">
        <h2 class="text-lg font-semibold mb-4">Stock Summary</h2>
        <div class="table-container">
            <table class="table">
                <thead>
                    <tr>
                        <th>Item</th>
                        <th>Quantity</th>
                        <th>Avg. Price</th>
                    </tr>
                </thead>
                <tbody>
                    <% stockSummary.forEach(item => { %>
                        <tr>
                            <td><%= item._id %></td>
                            <td><%= item.totalQuantity %></td>
                            <td>â‚¹<%= item.averagePrice.toFixed(2) %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Recent Invoices -->
<div class="card mt-6">
    <h2 class="text-lg font-semibold mb-4">Recent Invoices</h2>
    <div class="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th>Invoice #</th>
                    <th>Date</th>
                    <th>Vendor</th>
                    <th>Amount</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% recentInvoices.forEach(invoice => { %>
                    <tr>
                        <td><%= invoice.invoiceNumber %></td>
                        <td><%= invoice.date.toLocaleDateString() %></td>
                        <td><%= invoice.vendorName %></td>
                        <td>Rs. <%= invoice.totalAmount.toFixed(2) %></td>
                        <td>
                            <span class="px-2 py-1 text-xs rounded-full bg-green-100 text-green-800">
                                Paid
                            </span>
                        </td>
                        <td>
                            <a href="/invoices/<%= invoice._id %>/download" 
                               class="text-indigo-600 hover:text-indigo-800">
                                <i class="fas fa-download mr-1"></i>Download
                            </a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div> 