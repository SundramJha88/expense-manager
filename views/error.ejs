<div class="max-w-2xl mx-auto py-8">
    <div class="card bg-red-50 dark:bg-red-900">
        <div class="flex items-center mb-4">
            <svg class="h-8 w-8 text-red-600 dark:text-red-400 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
            <h1 class="text-2xl font-semibold text-red-700 dark:text-red-300">Error</h1>
        </div>

        <div class="text-red-600 dark:text-red-400">
            <% if (error && error.message) { %>
                <p class="text-lg"><%= error.message %></p>
            <% } else if (error) { %>
                <p class="text-lg"><%= error %></p>
            <% } else { %>
                <p class="text-lg">An unexpected error occurred.</p>
            <% } %>
        </div>

        <div class="mt-6">
            <a href="/" class="btn btn-primary">
                Return to Dashboard
            </a>
        </div>
    </div>
</div> 